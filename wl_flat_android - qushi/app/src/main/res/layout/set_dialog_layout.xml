<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_radius_4_253445"
    android:layout_marginBottom="@dimen/dp_50"
    android:layout_marginTop="@dimen/dp_50"
    android:orientation="vertical">



        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/dialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="--"
                android:textColor="#26b275"
                android:textSize="18sp" />
        </RelativeLayout>


        <com.wl.wlflatproject.MView.NumberPickerView

            android:id="@+id/start"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="30dp"
            android:contentDescription="picker_hour"
            app:npv_DividerColor="#56616c"
            app:npv_DividerMarginLeft="@dimen/dp_14"
            app:npv_HintText=""
            app:npv_RespondChangeInMainThread="true"
            app:npv_ShownCount="5"
            app:npv_TextColorHint="#27B275"
            app:npv_TextColorNormal="#b3b3b3"
            app:npv_TextColorSelected="#27B275"
            app:npv_TextSizeHint="12sp"
            app:npv_TextSizeNormal="16sp"
            app:npv_TextSizeSelected="22sp"
            app:npv_WrapSelectorWheel="false" />

        <Button
            android:id="@+id/complete"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_radius_4_26b275"
            android:text="完成"
            android:textSize="14sp" />
</LinearLayout>